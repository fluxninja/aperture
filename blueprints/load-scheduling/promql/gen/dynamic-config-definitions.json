{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "load-scheduling/promql blueprint",
  "additionalProperties": false,
  "required": ["blueprint", "uri", "dry_run"],
  "properties": {
    "blueprint": {
      "description": "Blueprint name",
      "type": "string",
      "default": "load-scheduling/promql",
      "enum": ["load-scheduling/promql"]
    },
    "uri": {
      "description": "Blueprint URI. E.g. github.com/fluxninja/aperture/blueprints@latest.",
      "default": "github.com/fluxninja/aperture/blueprints@latest",
      "type": "string"
    },
    "dry_run": {
      "description": "Dynamic configuration for setting dry run mode at runtime without restarting this policy. In dry run mode the scheduler acts as pass through to all flow and does not queue flows. It is useful for observing the behavior of load scheduler without disrupting any real traffic.",
      "default": "__REQUIRED_FIELD__",
      "type": "boolean"
    }
  },
  "$defs": null
}
