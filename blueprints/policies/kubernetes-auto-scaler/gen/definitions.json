{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "policies/kubernetes-auto-scaler blueprint",
  "additionalProperties": false,
  "required": ["common", "policy"],
  "properties": {
    "common": {
      "type": "object",
      "additionalProperties": false,
      "required": ["policy_name"],
      "properties": {
        "policy_name": {
          "description": "Name of the policy.",
          "default": "__REQUIRED_FIELD__",
          "type": "string"
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kubernetes_object_selector",
        "scale_in_criteria",
        "scale_out_criteria"
      ],
      "properties": {
        "min_replicas": {
          "description": "Minimum number of replicas.",
          "default": "1",
          "type": "string"
        },
        "max_replicas": {
          "description": "Maximum number of replicas.",
          "default": "10",
          "type": "string"
        },
        "scale_in_cooldown": {
          "description": "The amount of time to wait after a scale-in operation for another scale-in operation.",
          "default": "40s",
          "type": "string"
        },
        "scale_out_cooldown": {
          "description": "The amount of time to wait after a scale-out operation for another scale-out or scale-in operation.",
          "default": "30s",
          "type": "string"
        },
        "cooldown_override_percentage": {
          "description": "Cooldown override percentage defines a threshold change in scale-out beyond which previous cooldown is overridden.",
          "default": 50,
          "type": "number",
          "format": "double"
        },
        "max_scale_in_percentage": {
          "description": "The maximum decrease of replicas (e.g. pods) at one time.",
          "default": 1,
          "type": "number",
          "format": "double"
        },
        "max_scale_out_percentage": {
          "description": "The maximum increase of replicas (e.g. pods) at one time.",
          "default": 10,
          "type": "number",
          "format": "double"
        },
        "scale_in_alerter_parameters": {
          "description": "Configuration for scale-in alerter.",
          "default": {
            "alert_name": "Kubernetes Auto Scaler Scale In Event"
          },
          "type": "object",
          "$ref": "../../../gen/jsonschema/_definitions.json#/definitions/AlerterParameters"
        },
        "scale_out_alerter_parameters": {
          "description": "Cooldown override percentage.",
          "default": {
            "alert_name": "Kubernetes Auto Scaler Scale Out Event"
          },
          "type": "object",
          "$ref": "../../../gen/jsonschema/_definitions.json#/definitions/AlerterParameters"
        },
        "components": {
          "description": "List of additional circuit components.",
          "default": [],
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "../../../gen/jsonschema/_definitions.json#/definitions/Component"
          }
        },
        "kubernetes_object_selector": {
          "type": "object",
          "additionalProperties": false,
          "required": ["namespace", "api_version", "kind", "name"],
          "properties": {
            "namespace": {
              "description": "Namespace.",
              "default": "__REQUIRED_FIELD__",
              "type": "string"
            },
            "api_version": {
              "description": "API Version.",
              "default": "__REQUIRED_FIELD__",
              "type": "string"
            },
            "kind": {
              "description": "Kind.",
              "default": "__REQUIRED_FIELD__",
              "type": "string"
            },
            "name": {
              "description": "Name.",
              "default": "__REQUIRED_FIELD__",
              "type": "string"
            }
          }
        },
        "scale_in_criteria": {
          "description": "List of scale-in criteria.",
          "default": [
            {
              "parameters": {
                "slope": 1
              },
              "query": {
                "promql": {
                  "evaluation_interval": "10s",
                  "out_ports": {
                    "output": {
                      "signal_name": "__REQUIRED_FIELD__"
                    }
                  },
                  "query_string": "__REQUIRED_FIELD__"
                }
              },
              "set_point": 0.5
            }
          ],
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/$defs/scale_criteria"
          }
        },
        "scale_out_criteria": {
          "description": "List of scale-out criteria.",
          "default": [
            {
              "parameters": {
                "slope": -1
              },
              "query": {
                "promql": {
                  "evaluation_interval": "10s",
                  "out_ports": {
                    "output": {
                      "signal_name": "__REQUIRED_FIELD__"
                    }
                  },
                  "query_string": "__REQUIRED_FIELD__"
                }
              },
              "set_point": 1
            }
          ],
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/$defs/scale_criteria"
          }
        }
      }
    },
    "dashboard": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "refresh_interval": {
          "description": "Refresh interval for dashboard panels.",
          "default": "5s",
          "type": "string"
        },
        "time_from": {
          "description": "From time of dashboard.",
          "default": "now-15m",
          "type": "string"
        },
        "time_to": {
          "description": "To time of dashboard.",
          "default": "now",
          "type": "string"
        },
        "datasource": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "description": "Datasource name.",
              "default": "$datasource",
              "type": "string"
            },
            "filter_regex": {
              "description": "Datasource filter regex.",
              "default": "",
              "type": "string"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "scale_criteria": {
      "type": "object",
      "additionalProperties": false,
      "required": ["query"],
      "properties": {
        "query": {
          "description": "Query.",
          "default": {
            "promql": {
              "evaluation_interval": "10s",
              "out_ports": {
                "output": {
                  "signal_name": "__REQUIRED_FIELD__"
                }
              },
              "query_string": "__REQUIRED_FIELD__"
            }
          },
          "type": "object",
          "$ref": "../../../gen/jsonschema/_definitions.json#/definitions/Query"
        },
        "set_point": {
          "description": "Set point.",
          "default": 1,
          "type": "number",
          "format": "double"
        },
        "parameters": {
          "description": "Parameters.",
          "default": {
            "slope": -1
          },
          "type": "object",
          "$ref": "../../../gen/jsonschema/_definitions.json#/definitions/IncreasingGradientParameters"
        }
      }
    }
  }
}
